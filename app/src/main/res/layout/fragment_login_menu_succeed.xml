<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200px"
    android:layout_height="match_parent"
    android:background="#C5F5FF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="56px"
        android:src="@mipmap/leftbar_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/left_logo"
        android:layout_marginTop="42px"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/login_succeed_state"
            style="@style/left_menu_selector"
            android:background="@drawable/selector_left_menu"
            android:clickable="true"
            android:text="系统状态"
            />

        <TextView
            android:id="@+id/login_succeed_time_parameter"
            style="@style/left_menu_selector"
            android:layout_marginTop="26px"
            android:background="@drawable/selector_left_menu"
            android:clickable="true"
            android:text="时间参数" />

        <TextView
            android:id="@+id/login_succeed_setting"
            style="@style/left_menu_selector"
            android:layout_marginTop="26px"
            android:background="@drawable/selector_left_menu"
            android:clickable="true"
            android:text="系统设置" />

        <TextView
            android:id="@+id/login_succeed_history"
            style="@style/left_menu_selector"
            android:layout_marginTop="26px"
            android:background="@drawable/selector_left_menu"
            android:clickable="true"
            android:text="历史数据" />

        <TextView
            android:id="@+id/login_succeed_introduce"
            style="@style/left_menu_selector"
            android:layout_marginTop="26px"
            android:background="@drawable/selector_left_menu"
            android:clickable="true"
            android:text="公司介绍" />


    </LinearLayout>


</RelativeLayout>