<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/parameter_time_ditu">
    <!--最上层的布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--返回按键-->
        <Button
            android:id="@+id/systemsetting_btn_back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@mipmap/wangjimima_btn_return"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:layout_centerInParent="true"
            android:layout_marginTop="40px"
            android:textSize="30px"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动"
            android:textSize="26px"
            android:textColor="#ffffff"
            android:layout_marginLeft="174px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="自动"
            android:textSize="26px"
            android:textColor="#ffffff"
            android:layout_marginRight="94px"/>
    </RelativeLayout>
    <!--中间层布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22px">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
            android:tag="">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="压力待机"
            android:gravity="center"
            android:layout_marginLeft="32px"
            android:textSize="24px"
            android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="压力启动"
                android:gravity="center"
                android:layout_marginLeft="32px"
                android:textSize="24px"
                android:textColor="#ffffff"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--压力待机输入框-->
    <EditText
        android:id="@+id/systemsetting_et_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/parameter_system_01"
        android:hint="60"
        android:textSize="22px"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:layout_marginLeft="32px"
        android:gravity="right|center_vertical"
        />
    <!--压力启动输入框-->
    <EditText
        android:id="@+id/systemsetting_et_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/parameter_system_02"
        android:hint="30"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="22px"
        android:layout_marginTop="16px"
        android:layout_marginLeft="32px"
        android:gravity="right|center_vertical"
        />
</LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="主/副机"
                android:gravity="center"
                android:layout_marginLeft="212px"
                android:layout_marginRight="34px"
                android:textSize="24px"
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="34px">
            <!--主机输入框-->
            <EditText
                android:id="@+id/systemsetting_et_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/parameter_system_03"
                android:hint="0.0"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="22px"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
               />
            <!--副机输入框-->
            <EditText
                android:id="@+id/systemsetting_et_auxiliary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/parameter_system_04"
                android:hint="0.0"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="22px"
                android:layout_marginTop="16px"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>


 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压力报警值"
            android:gravity="center"
            android:layout_marginLeft="268px"
            android:textSize="24px"
            android:textColor="#ffffff"/>
        <!--压力报警值-->
        <EditText
            android:id="@+id/systemsetting_et_prssure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/parameter_system_05"
            android:hint="0.0"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="20px"
            android:textSize="22px"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浓度报警值"
            android:gravity="center"
            android:layout_marginLeft="268px"
            android:textSize="24px"
            android:textColor="#ffffff"/>
        <!--浓度报警值-->
        <EditText
            android:id="@+id/systemsetting_et_concentration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/parameter_system_06"
            android:hint="0.0"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="20px"
            android:textSize="22px"
            android:gravity="right|center_vertical"
          />
    </LinearLayout>
</LinearLayout>