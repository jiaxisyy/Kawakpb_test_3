<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image">
    <!--顶层的logo与时间日期布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="322px"
            android:layout_marginTop="35px"
            android:textSize="26px"
            />
        <TextView
            android:id="@+id/tv_home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="176px"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginTop="35px"
            android:textSize="26px"
            android:text="2016-03-28"
            android:layout_marginBottom="55px"/>
    </LinearLayout>

    <!--中间层的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--表盘的包裹布局-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--表盘图片-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:background="@drawable/shouye_biaopan"/>
        </LinearLayout>
        <!--参数设置的垂直布局，由上至下-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--参数设置压力与浓度的输入框包裹布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et__home_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="26px"
                    android:text="0.0"
                    android:layout_marginLeft="57px"
                    android:background="@drawable/shouye_shuju_anjian"/>
                <EditText
                    android:id="@+id/et__home_concentration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="60px"
                    android:textColor="#ffffff"
                    android:textSize="26px"
                    android:text="0.0"
                    android:background="@drawable/shouye_shuju_anjian"/>
            </LinearLayout>
            <!--输入框文字提示包裹布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="22px"
                    android:text="压力"
                    android:layout_marginLeft="75px"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14px"
                    android:text="kg/cm²"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="22px"
                    android:text="浓度"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14px"
                    android:text="%"
                    android:layout_marginTop="10px" />
            </LinearLayout>
            <!--流量输入框包裹布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60px">
                <EditText
                    android:id="@+id/et__home_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="26px"
                    android:text="0"
                    android:layout_marginLeft="57px"
                    android:background="@drawable/shouye_shuju_anjian"/>
                <EditText
                    android:id="@+id/et__home_Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="60px"
                    android:textColor="#ffffff"
                    android:textSize="26px"
                    android:text="0"
                    android:background="@drawable/shouye_shuju_anjian"/>
            </LinearLayout>
            <!--输入框文字提示包裹布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="22px"
                    android:text="流量"
                    android:layout_marginLeft="75px"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14px"
                    android:text="L/mine"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="22px"
                    android:text="累计流量"
                    android:layout_marginLeft="90px"
                    android:layout_marginTop="10px" />
            </LinearLayout>
            <!--AB机控制按键-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px">
                <Button
                    android:id="@+id/btn__home_machine_a"
                    android:layout_marginLeft="60px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20px"
                    android:textColor="@drawable/text_anjian_selector"
                    android:background="@drawable/shouye_ab_selector"
                    android:gravity="center"
                    android:text="A机"/>
                <Button
                    android:id="@+id/btn__home_machine_b"
                    android:layout_marginLeft="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20px"
                    android:gravity="center"
                    android:textColor="@drawable/text_anjian_selector"
                    android:text="B机"
                    android:background="@drawable/shouye_ab_selector"/>
                <Button
                    android:id="@+id/btn__home_machine_switch"
                    android:layout_marginLeft="30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动"
                    android:textColor="@drawable/text_anjian_selector"
                    android:gravity="center_vertical"
                    android:background="@drawable/shouye_anjian_shoudong_selector"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>