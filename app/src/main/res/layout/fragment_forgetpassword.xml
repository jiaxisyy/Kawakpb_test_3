<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@mipmap/loging_blue_ditu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="350px"
                android:layout_height="60px"
                android:layout_weight="0.04"
                android:background="@mipmap/loging_di">

                <Button
                    android:id="@+id/forget_btn_back"
                    android:layout_width="12px"
                    android:layout_height="22px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:background="@mipmap/wangjimima_btn_return"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="22px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!--登录界面中间层布局-->
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="350px"
        android:background="@mipmap/loging_gray_di"
        android:gravity="center|top">

        <LinearLayout
            android:layout_width="365px"
            android:layout_height="250px"
            android:background="@mipmap/loging_whitedi"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/forget_et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15px"
                android:background="@drawable/forgetpassword_selector"

                android:gravity="center_vertical"
                android:hint="请输入您的手机号/邮箱"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10px"
                android:paddingTop="10px">

                <EditText
                    android:id="@+id/forget_et_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/loging_yanzhengma_input_selector"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="验证码"
                    android:paddingLeft="10px"
                    android:singleLine="true"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/forget_btn_getcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="6px"
                    android:layout_weight="1"
                    android:background="@mipmap/loging_btn_blue_yanzhengma"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/forget_et_passwoed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/loging_input_mima_kejian"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/forget_et_passwoed_second"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:background="@mipmap/loging_input_mima_bukejian"
                android:gravity="center_vertical"
                android:hint="再输入新密码"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textSize="10sp" />

            <Button
                android:id="@+id/forget_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="6px"
                android:layout_marginTop="10px"
                android:layout_gravity="center"
                android:background="@mipmap/loging_btn_blue"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="20px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>